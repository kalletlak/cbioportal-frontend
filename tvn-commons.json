{
  "compilerOptions": {
      "outDir": "./tsDist/",
      "typeRoots": [
        "node_modules/@types"
      ],
      "sourceMap": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "module": "es6",
      "target": "es6",
      "jsx": "preserve",
      "allowJs": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
          "*": [
            "src/*"
          ]
      },
      "lib":["es2015", "es2016.array.include", "dom"]
  },
  "exclude": ["./node_modules/*"],
  "include": [
    "./typings/**/*",
      "./src/tvn/**/*"
  ],
  "compileOnSave": false
}
